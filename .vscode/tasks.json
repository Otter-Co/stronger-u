{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Watcher",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build-typescript",
                "build-react"
            ]
        },
        {
            "label": "Build React",
            "identifier": "build-react",
            "type": "npm",
            "script": "start"
        },
        {
            "type": "typescript",
            "identifier": "build-typescript",
            "tsconfig": "${workspaceFolderBasename}\\src\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}